const trustBadges = [
  { label: "Years", sublabel: "Community Care", value: "80", icon: "shield" },
  { label: "AHPRA Registered", icon: "certificate" },
  { label: "Bulk Billing Available", icon: "dollar" },
  { label: "7+ Languages Spoken", icon: "globe" },
  { label: "24/7 Online Booking", icon: "calendar" }
];

const services = [
  { name: "General Practice", href: "/services/general-practice" },
  { name: "Chronic Disease Management", href: "/services/chronic-disease" },
  { name: "Women's Health", href: "/services/womens-health" },
  { name: "Men's Health", href: "/services/mens-health" },
