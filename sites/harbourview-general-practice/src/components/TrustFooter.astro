  practiceName?: string;
  address?: string;
  phone?: string;
  email?: string;
}

const {
  practiceName = "Harbourview General Practice",
  address = "123 Harbour Street, Sydney NSW 2000",
  phone = "(02) 9999 9999",
  email = "info@harbourviewgp.com.au"
