---
// BookingCTA.astro - Drop Anchor Metaphor
// Pivotal moment of securing your place in the safe harbour
// Anti-AI Constraint: Constraint creativity (CTA positioned bottom-right, unconventional)

interface Props {
  title?: string;
  description?: string;
  ctaText?: string;
  phoneNumber?: string;
}

const {
  title = "Drop Anchor With Us",
  description = "No more weeks of waiting. No more rushed appointments. Secure your berth online in minutes and experience healthcare that puts you first.",
  ctaText = "Book Appointment Now",
  phoneNumber = "(02) 9999 9999"
} = Astro.props;

const trustIndicators = [
  "24/7 Online Booking",
  "Appointments Within Days",
  "Bulk Billing Available"
];
---

<section class="relative py-24 bg-blue-900 overflow-hidden">
  <!-- Abstract anchor illustration (subtle opacity) -->
  <div class="absolute inset-0 opacity-5">
    <svg class="absolute top-1/2 right-1/4 w-96 h-96 transform -translate-y-1/2" viewBox="0 0 400 400">
      <path
        d="M200,50 L200,250 M150,250 L250,250 M180,280 Q200,300 220,280 M160,280 L140,320 M240,280 L260,320"
        stroke="currentColor"
        stroke-width="8"
        fill="none"
        class="text-blue-800"
      />
    </svg>
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-center">

        <!-- Left: Headline & Description (7 cols) -->
        <div class="lg:col-span-7">
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-6 leading-tight">
            {title}
          </h2>
          <p class="text-xl text-blue-100 leading-relaxed mb-8">
            {description}
          </p>

          <!-- Trust indicators -->
          <div class="flex flex-wrap gap-6 text-blue-200">
            {trustIndicators.map(indicator => (
              <div class="flex items-center gap-2">
                <span class="text-orange-400 font-bold text-2xl">âœ“</span>
                <span>{indicator}</span>
              </div>
            ))}
          </div>
        </div>

        <!-- Right: CTA (Intentionally off-center) - 5 cols -->
        <div class="lg:col-span-5 flex justify-end">
          <div class="bg-white/10 backdrop-blur-sm p-8 rounded-3xl border border-white/20">
            <a
              href="/book"
              class="block bg-orange-400 text-blue-900 px-12 py-6 rounded-2xl text-xl font-bold text-center shadow-2xl hover:bg-orange-300 transition transform hover:scale-105"
            >
              {ctaText}
            </a>
            <p class="text-blue-100 text-center mt-4 text-sm">
              Or call <a href={`tel:${phoneNumber.replace(/\s/g, '')}`} class="text-orange-400 font-semibold hover:text-orange-300">{phoneNumber}</a>
            </p>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
