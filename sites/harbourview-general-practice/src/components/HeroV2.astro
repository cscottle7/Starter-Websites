---
// Hero Section v2.0 - "The Wellness Catalyst"
// Full-bleed gradient hero with vibrant transformation aesthetic
// Metaphor: The catalyst moment - immediate energy release, transformation begins

interface Props {
  title?: string;
  subtitle?: string;
  primaryCTA?: string;
  primaryCTALink?: string;
}

const {
  title = "Catalyze Your Wellness Transformation",
  subtitle = "Expert GPs + Innovative Access + Patient Empowerment = Breakthrough Health Outcomes",
  primaryCTA = "Book in 60 Seconds",
  primaryCTALink = "/book"
} = Astro.props;
---

<section class="relative min-h-screen bg-gradient-to-br from-violet-500 via-red-400 to-yellow-400 flex items-center justify-center overflow-hidden">
  <!-- Abstract catalyst reaction background overlay -->
  <div class="absolute inset-0 bg-[url('/images/abstract-catalyst-reaction.jpg')] opacity-20 mix-blend-overlay"></div>

  <div class="relative z-10 container mx-auto px-4 text-center text-white py-20">
    <!-- Eyebrow (small intro) -->
    <p class="text-xl md:text-2xl font-sans font-light uppercase tracking-widest mb-6 opacity-90">
      Neutral Bay's Most Innovative GP Practice
    </p>

    <!-- MASSIVE H1 (Display Font) - Anti-AI: text-9xl scale -->
    <h1 class="font-display text-6xl md:text-8xl lg:text-9xl font-bold tracking-tight leading-none mb-8">
      Catalyze Your<br>Wellness<br><span class="text-yellow-300">Transformation</span>
    </h1>

    <!-- Subheading -->
    <p class="text-2xl md:text-3xl font-sans font-light leading-relaxed max-w-4xl mx-auto mb-12 opacity-95">
      {subtitle}
    </p>

    <!-- CTAs (Floating Cards) - Anti-AI: Gradient fills, scale transforms -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-3xl mx-auto">
      <a href={primaryCTALink} class="group bg-white text-violet-500 px-10 py-6 rounded-3xl font-bold text-xl shadow-2xl hover:shadow-[0_20px_60px_rgba(139,92,246,0.5)] hover:scale-105 transition-all duration-500 border-4 border-white">
        {primaryCTA} →
        <span class="block text-sm font-normal text-stone-600 mt-2">24/7 Online Booking</span>
      </a>

      <a href="/doctors" class="bg-gradient-to-r from-violet-500/20 to-red-400/20 backdrop-blur-sm text-white px-10 py-6 rounded-3xl font-bold text-xl shadow-2xl hover:shadow-[0_20px_60px_rgba(255,107,107,0.5)] hover:scale-105 transition-all duration-500 border-4 border-white/30">
        Meet Our Expert GPs
        <span class="block text-sm font-normal opacity-90 mt-2">80 Years Combined Experience</span>
      </a>
    </div>

    <!-- Trust Signals (Floating Pills) - Anti-AI: backdrop-blur glassmorphism -->
    <div class="flex flex-wrap justify-center gap-4 mt-16">
      <div class="bg-white/10 backdrop-blur-md px-6 py-3 rounded-full border-2 border-white/30 text-white font-semibold">
        ✓ Bulk Billing Available
      </div>
      <div class="bg-white/10 backdrop-blur-md px-6 py-3 rounded-full border-2 border-white/30 text-white font-semibold">
        ✓ Same-Day Appointments
      </div>
      <div class="bg-white/10 backdrop-blur-md px-6 py-3 rounded-full border-2 border-white/30 text-white font-semibold">
        ✓ Multilingual GPs
      </div>
      <div class="bg-white/10 backdrop-blur-md px-6 py-3 rounded-full border-2 border-white/30 text-white font-semibold">
        ✓ Saturday Hours
      </div>
    </div>
  </div>
</section>
