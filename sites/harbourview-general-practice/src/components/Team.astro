                {doctor.languages.map(lang => (
                  <span class="px-3 py-1 bg-blue-100 text-blue-900 text-sm rounded-full border border-blue-200">
                    {lang.flag} {lang.name}
                  </span>
                ))}
              </div>

              <p class={`text-stone-700 ${doctor.colSpan === 'lg:col-span-3' ? 'text-sm' : 'text-xs'} leading-relaxed mb-4`}>
                {doctor.specialties}
              </p>

              <a
                href={doctor.bookingUrl}
                class={`text-orange-400 font-semibold hover:text-orange-500 inline-flex items-center gap-2 ${doctor.colSpan === 'lg:col-span-3' ? '' : 'text-sm'}`}
              >
                Book with {doctor.name.split(' ')[1]} â†’
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
