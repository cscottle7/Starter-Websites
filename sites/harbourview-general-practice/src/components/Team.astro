      </p>

      <!-- Asymmetric grid with varying column spans -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-7 gap-8 gap-y-12">
        {doctors.map(doctor => (
          <div class={`${doctor.colSpan} bg-white rounded-3xl shadow-lg overflow-hidden hover:shadow-xl transition`}>
            <!-- Doctor photo with blue tint background -->
            <div class={`${doctor.colSpan === 'lg:col-span-3' ? 'aspect-[4/3]' : 'aspect-square'} bg-blue-100 overflow-hidden`}>
              <img
                src={doctor.imageUrl}
                alt={doctor.name}
                class="w-full h-full object-cover"
              />
            </div>

            <div class="p-6">
              <h3 class={`${doctor.colSpan === 'lg:col-span-3' ? 'text-2xl' : 'text-xl'} font-bold text-blue-900 mb-2`}>
                {doctor.name}
              </h3>
              <p class={`text-stone-600 ${doctor.colSpan === 'lg:col-span-3' ? 'mb-4' : 'text-sm mb-3'}`}>
                {doctor.title} â€¢ {doctor.experience}
              </p>

              <!-- Multilingual badges with nuanced blue shades -->
