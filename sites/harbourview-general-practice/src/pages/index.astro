---
// Homepage v2.0 - Harbourview General Practice
// Design System: "The Wellness Catalyst" (Abstract/Scientific Metaphor)
// Created: 2025-11-19
// Meta-Prompt: creative-meta-prompt-v2.md

import HeroV2 from '../components/HeroV2.astro';
import TransformationV2 from '../components/TransformationV2.astro';
import CatalystFeaturesV2 from '../components/CatalystFeaturesV2.astro';
import BookingCTAV2 from '../components/BookingCTAV2.astro';

// SEO metadata from homepage_final_content.md
const seoTitle = "Harbour View GP | Family Doctor Neutral Bay & North Shore";
const seoDescription = "Modern family medical practice in Neutral Bay. Experienced GPs, bulk billing for children & pensioners. Online booking, Saturday appointments. Book today.";
const seoKeywords = "GP Neutral Bay, family doctor North Shore, bulk billing doctor Neutral Bay, general practice Sydney, multilingual GP";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO Meta Tags -->
    <title>{seoTitle}</title>
    <meta name="description" content={seoDescription} />
    <meta name="keywords" content={seoKeywords} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={seoTitle} />
    <meta property="og:description" content={seoDescription} />
    <meta property="og:image" content="/images/og-image.jpg" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={seoTitle} />
    <meta property="twitter:description" content={seoDescription} />
    <meta property="twitter:image" content="/images/og-image.jpg" />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://harbourviewgp.com.au/" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800;900&display=swap" rel="stylesheet" />

    <!-- Schema.org structured data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "MedicalBusiness",
        "name": "Harbourview General Practice",
        "description": "Modern family medical practice providing comprehensive, multilingual healthcare services",
        "url": "https://harbourviewgp.com.au",
        "telephone": "+61299530000",
        "email": "info@harbourviewgp.com.au",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Suite 3, 142 Military Road",
          "addressLocality": "Neutral Bay",
          "addressRegion": "NSW",
          "postalCode": "2089",
          "addressCountry": "AU"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": -33.8328,
          "longitude": 151.2197
        },
        "openingHoursSpecification": [
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
            "opens": "08:00",
            "closes": "18:00"
          },
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": "Saturday",
            "opens": "09:00",
            "closes": "13:00"
          }
        ],
        "priceRange": "$$",
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "4.7",
          "reviewCount": "120"
        },
        "medicalSpecialty": [
          "General Practice",
          "Family Medicine",
          "Chronic Disease Management",
          "Women's Health",
          "Children's Health",
          "Mental Health"
        ]
      }
    </script>
  </head>

  <body class="font-sans antialiased">
    <!-- PHASE 1 COMPONENTS (v2.0 - Wellness Catalyst) -->

    <!-- 1. Hero Section - Catalyst Moment -->
    <HeroV2
      title="Catalyze Your Wellness Transformation"
      subtitle="Expert GPs + Innovative Access + Patient Empowerment = Breakthrough Health Outcomes"
      primaryCTA="Book in 60 Seconds"
      primaryCTALink="/book"
    />

    <!-- 2. Transformation Promise - Solution-First -->
    <TransformationV2
      heading="Your Breakthrough Starts Here"
      subheading="We remove barriers, empower decisions, and provide expert guidance—you drive the transformation."
    />

    <!-- 3. Catalyst Features - 4 Value Pillars -->
    <CatalystFeaturesV2
      heading="The Transformation Enablers"
      subheading="Breakthrough wellness outcomes through expert guidance, innovative access, and patient empowerment—removing every barrier between you and your health goals."
    />

    <!-- 4. Booking CTA - Activation Energy -->
    <BookingCTAV2
      title="Start Your Transformation Today"
      subtitle="Book your first appointment in 60 seconds. Our catalyst team is ready to empower your wellness breakthrough."
      ctaText="Book Your Appointment Now"
      ctaLink="/book"
      phoneNumber="(02) 9953 0000"
    />

    <!-- PHASE 2 COMPONENTS - To be added later -->
    <!-- 5. DoctorProfiles.astro - "Precision Catalysts" -->
    <!-- 6. Services.astro - Healthcare services grid -->
    <!-- 7. Testimonials.astro - Patient transformation stories -->
    <!-- 8. Contact.astro - Location & contact info -->

    <style is:global>
      /* Global styles */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      /* Smooth scrolling for anchor links */
      html {
        scroll-behavior: smooth;
      }

      /* Ensure full-height sections */
      section {
        position: relative;
      }

      /* Accessibility: Skip to main content */
      .skip-to-main {
        position: absolute;
        left: -9999px;
        z-index: 999;
        padding: 1em;
        background-color: #8B5CF6;
        color: white;
        text-decoration: none;
      }

      .skip-to-main:focus {
        left: 50%;
        transform: translateX(-50%);
        top: 1em;
      }
    </style>
  </body>
</html>
