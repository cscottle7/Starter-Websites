  }

  .items-center {
    align-items: center;
  }

  .items-start {
    align-items: flex-start;
  }

  .flex {
    display: flex;
  }

  .space-y-3 > * + * {
    margin-top: 0.75rem;
  }

  .space-y-4 > * + * {
    margin-top: 1rem;
  }

  .bg-white {
    background-color: #fff;
  }

  .p-8 {
    padding: 2rem;
  }

  .rounded-lg {
    border-radius: 0.5rem;
  }

