    line-height: 1.25rem;
  }

  .font-bold {
    font-weight: 700;
  }

  .font-semibold {
    font-weight: 600;
  }

  .font-medium {
    font-weight: 500;
  }

  .text-gray-900 {
    color: #111827;
  }

  .text-gray-700 {
    color: #374151;
  }

  .text-gray-600 {
    color: #4b5563;
  }

  .text-green-500 {
    color: #10b981;
  }

  .bg-gray-200 {
    background-color: #e5e7eb;
  }

  .bg-blue-600 {
    background-color: #2563eb;
  }

  .bg-green-600 {
    background-color: #16a34a;
  }

  .bg-purple-600 {
    background-color: #9333ea;
  }

  @media (min-width: 768px) {
    .md\:grid-cols-2 {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    .md\:grid-cols-3 {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }
</style>
