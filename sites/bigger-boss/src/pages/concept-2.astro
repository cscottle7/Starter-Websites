---
import MainLayout from '../layouts/MainLayout.astro';

const pageTitle = "Bigger Boss - Sophisticated Simplicity";
const pageDescription = "Strategy Without the Wait. Comprehensive marketing strategies delivered in 3-5 days.";
---

<MainLayout title={pageTitle} description={pageDescription}>
  <!-- Hero Section: Sophisticated Simplicity -->
  <section class="min-h-screen flex items-center justify-center bg-white px-6 py-20">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="font-serif text-5xl md:text-6xl lg:text-7xl font-normal text-navy-900 mb-8 leading-tight">
        Strategy Without the Wait
      </h1>
      <p class="text-xl md:text-2xl text-gray-700 max-w-2xl mx-auto mb-12 leading-relaxed font-light">
        Comprehensive marketing strategies delivered in 3-5 days. Publication-ready. 85+ quality guarantee. Built for Australian businesses.
      </p>
      <a
        href="#beta-waitlist"
        class="inline-block bg-blue-500 hover:bg-blue-600 text-white font-medium px-14 py-5 rounded-full text-lg transition-all duration-300 shadow-lg hover:shadow-xl"
      >
        Join Beta Waitlist
      </a>
      <p class="text-sm text-gray-500 mt-8">
        Launching February 2026 • 20 founding spots
      </p>

      <!-- Scroll Indicator -->
      <div class="mt-16 animate-bounce">
        <svg class="w-6 h-6 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
      </div>
    </div>
  </section>

  <!-- Three-Statement Value Proposition -->
  <section class="py-32 bg-white px-6">
    <div class="max-w-3xl mx-auto space-y-24">
      <h2 class="font-serif text-3xl md:text-4xl text-center text-navy-900 leading-relaxed font-normal">
        While competitors spend 8-12 weeks on strategy, you'll be executing.
      </h2>
      <h2 class="font-serif text-3xl md:text-4xl text-center text-navy-900 leading-relaxed font-normal">
        Four expert perspectives review every deliverable. Nothing ships below 85/100.
      </h2>
      <h2 class="font-serif text-3xl md:text-4xl text-center text-navy-900 leading-relaxed font-normal">
        Australian compliance built-in. AHPRA. ASIC. Law Society.
      </h2>
    </div>
  </section>

  <!-- Minimalist Process Diagram -->
  <section class="py-32 bg-gray-50 px-6">
    <div class="max-w-5xl mx-auto">
      <h2 class="font-serif text-4xl md:text-5xl text-center text-navy-900 mb-20 font-normal">
        How It Works
      </h2>

      <div class="grid md:grid-cols-4 gap-8 md:gap-4 relative">
        <!-- Connection Line (Desktop Only) -->
        <div class="hidden md:block absolute top-12 left-0 right-0 h-0.5 bg-navy-200"></div>

        <!-- Step 1 -->
        <div class="relative text-center">
          <div class="w-24 h-24 mx-auto mb-6 rounded-full border-2 border-navy-900 flex items-center justify-center bg-white relative z-10">
            <svg class="w-10 h-10 text-navy-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
          </div>
          <h3 class="font-serif text-xl text-navy-900 mb-2">Book 20-Minute Call</h3>
          <p class="text-sm text-gray-600 font-light">Strategic alignment</p>
        </div>

        <!-- Step 2 -->
        <div class="relative text-center">
          <div class="w-24 h-24 mx-auto mb-6 rounded-full border-2 border-navy-900 flex items-center justify-center bg-white relative z-10">
            <svg class="w-10 h-10 text-navy-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <h3 class="font-serif text-xl text-navy-900 mb-2">Submit Client Brief</h3>
          <p class="text-sm text-gray-600 font-light">Your requirements</p>
        </div>

        <!-- Step 3 -->
        <div class="relative text-center">
          <div class="w-24 h-24 mx-auto mb-6 rounded-full border-2 border-navy-900 flex items-center justify-center bg-white relative z-10">
            <svg class="w-10 h-10 text-navy-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="font-serif text-xl text-navy-900 mb-2">Receive Strategy</h3>
          <p class="text-sm text-gray-600 font-light">3-5 days</p>
        </div>

        <!-- Step 4 -->
        <div class="relative text-center">
          <div class="w-24 h-24 mx-auto mb-6 rounded-full border-2 border-navy-900 flex items-center justify-center bg-white relative z-10">
            <svg class="w-10 h-10 text-navy-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="font-serif text-xl text-navy-900 mb-2">Review & Execute</h3>
          <p class="text-sm text-gray-600 font-light">Start immediately</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Single Sample Deliverable Teaser -->
  <section class="py-32 bg-white px-6">
    <div class="max-w-3xl mx-auto text-center">
      <!-- Document Icon -->
      <img
        src="/images/concept2/Gemini_Generated_Image_gt0f3bgt0f3bgt0f (1).png"
        alt="Comprehensive strategy document"
        class="w-32 h-32 mx-auto mb-8 opacity-80"
      />
      <h2 class="font-serif text-4xl md:text-5xl text-navy-900 mb-8 font-normal">
        What You Receive
      </h2>
      <p class="text-xl text-gray-700 leading-relaxed mb-8 font-light">
        An 8,000+ word comprehensive marketing strategy, reviewed by four specialist perspectives, guaranteed 85+ quality score.
      </p>
      <a
        href="#sample-modal"
        class="inline-flex items-center text-navy-900 font-medium hover:text-blue-600 transition-colors duration-200 text-lg border-b-2 border-navy-900 hover:border-blue-600"
      >
        Preview sample deliverable
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </section>

  <!-- Elegant Testimonial Placeholder -->
  <section class="py-32 bg-gray-50 px-6">
    <div class="max-w-3xl mx-auto text-center">
      <div class="text-6xl text-gray-300 mb-6">"</div>
      <p class="font-serif text-2xl md:text-3xl text-navy-900 italic mb-8 leading-relaxed font-normal">
        We went from 12 to 65 clients in 18 months without hiring a single strategist.
      </p>
      <p class="text-gray-600 font-light">
        — Marcus T., Agency Principal, Sydney
      </p>
      <p class="text-xs text-gray-400 mt-4 italic">Representative scenario based on persona research</p>
    </div>
  </section>

  <!-- Beta Program Section -->
  <section class="py-32 bg-navy-900 text-white px-6" id="beta-waitlist">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="font-serif text-4xl md:text-5xl mb-6 font-normal">
        Join the Founding 20
      </h2>
      <p class="text-xl text-gray-300 mb-8 font-light">
        Beta program launching February 2026
      </p>

      <!-- Minimal Benefits List -->
      <div class="max-w-md mx-auto text-left mb-12 space-y-3">
        <div class="flex items-center gap-3 text-gray-200">
          <svg class="w-5 h-5 text-green-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>50% lifetime discount</span>
        </div>
        <div class="flex items-center gap-3 text-gray-200">
          <svg class="w-5 h-5 text-green-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>Priority support</span>
        </div>
        <div class="flex items-center gap-3 text-gray-200">
          <svg class="w-5 h-5 text-green-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>Shape the product</span>
        </div>
      </div>

      <!-- Inline Email Form (Single Row on Desktop) -->
      <form class="max-w-5xl mx-auto">
        <div class="grid md:grid-cols-4 gap-4">
          <input
            type="text"
            placeholder="Name"
            required
            class="px-4 py-4 rounded-lg text-navy-900 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
          <input
            type="email"
            placeholder="Email"
            required
            class="px-4 py-4 rounded-lg text-navy-900 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
          <input
            type="text"
            placeholder="Company"
            required
            class="px-4 py-4 rounded-lg text-navy-900 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
          <button
            type="submit"
            class="px-6 py-4 bg-blue-500 hover:bg-blue-600 text-white font-medium rounded-lg transition-all duration-200"
          >
            Reserve Spot
          </button>
        </div>
      </form>

      <p class="text-sm text-gray-400 mt-6 font-light">
        No payment required
      </p>
    </div>
  </section>

  <!-- Minimal Footer -->
  <footer class="py-12 bg-white border-t border-gray-200 px-6">
    <div class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center gap-6">
      <div class="text-navy-900 font-serif text-xl">
        Bigger Boss
      </div>
      <div>
        <a href="#about" class="text-gray-600 hover:text-navy-900 transition-colors duration-200">
          About
        </a>
      </div>
      <div class="text-sm text-gray-500">
        © 2025 Bigger Boss
      </div>
    </div>
  </footer>
</MainLayout>

<style>
  /* Custom font loading for Playfair Display (serif) */
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Inter:wght@300;400;500;600&display=swap');

  :global(.font-serif) {
    font-family: 'Playfair Display', serif;
  }

  :global(body) {
    font-family: 'Inter', sans-serif;
  }
</style>
