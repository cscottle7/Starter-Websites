  <!-- ROI Calculator Script -->
  <script>
    const hoursSlider = document.getElementById('hours-slider');
    const hoursValue = document.getElementById('hours-value');
    const rateInput = document.getElementById('rate-input');
    const clientsSlider = document.getElementById('clients-slider');
    const clientsValue = document.getElementById('clients-value');

    const currentCostEl = document.getElementById('current-cost');
    const biggerbossCostEl = document.getElementById('biggerboss-cost');
    const savingsAmountEl = document.getElementById('savings-amount');
    const savingsPercentEl = document.getElementById('savings-percent');
    const timeSavedEl = document.getElementById('time-saved');
    const weeksSavedEl = document.getElementById('weeks-saved');

    function calculateROI() {
      const hours = parseInt(hoursSlider.value);
      const rate = parseInt(rateInput.value);
      const clients = parseInt(clientsSlider.value);

      const currentCost = hours * rate * clients;
      const biggerbossCost = 2997 * clients; // Using Essential tier pricing
      const savings = currentCost - biggerbossCost;
      const savingsPercent = Math.round((savings / currentCost) * 100);
      const timeSaved = hours * clients;
      const weeksSaved = Math.round(timeSaved / 40); // 40 hours = 1 work week

      currentCostEl.textContent = currentCost.toLocaleString();
      biggerbossCostEl.textContent = biggerbossCost.toLocaleString();
      savingsAmountEl.textContent = savings.toLocaleString();
      savingsPercentEl.textContent = savingsPercent;
      timeSavedEl.textContent = timeSaved.toLocaleString() + ' hours/year';
      weeksSavedEl.textContent = weeksSaved + ' work weeks';
    }

    hoursSlider.addEventListener('input', function() {
      hoursValue.textContent = this.value;
      calculateROI();
    });

    rateInput.addEventListener('input', calculateROI);

    clientsSlider.addEventListener('input', function() {
      clientsValue.textContent = this.value;
      calculateROI();
    });

    // Initial calculation
    calculateROI();
  </script>
