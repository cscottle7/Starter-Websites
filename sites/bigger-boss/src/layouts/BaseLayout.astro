---
/**
 * BaseLayout - Bigger Boss Site-Specific Layout
 * Extends the shared BaseLayout with custom font configuration
 *
 * Fonts: Inter (400, 600, 700, 800) + IBM Plex Serif (400, 400-italic, 600)
 * Design System: Softened Bold (Precision Engine Metaphor)
 */

import '@fontsource/inter/400.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import '@fontsource/inter/800.css';
import '@fontsource/ibm-plex-serif/400.css';
import '@fontsource/ibm-plex-serif/400-italic.css';
import '@fontsource/ibm-plex-serif/600.css';

interface Props {
  title: string;
  description: string;
  canonicalUrl?: string;
  ogImage?: string;
  noindex?: boolean;
}

const { title, description, canonicalUrl, ogImage, noindex = false } = Astro.props;
const currentUrl = canonicalUrl || Astro.url.href;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={currentUrl} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:type" content="website" />
    {ogImage && <meta property="og:image" content={ogImage} />}

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {ogImage && <meta name="twitter:image" content={ogImage} />}
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    /* Fonts will use Inter from @fontsource once installed, fallback to system fonts */
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
    background-color: #fff;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  /* Ensure testimonials use IBM Plex Serif */
  blockquote {
    font-family: 'IBM Plex Serif', Georgia, serif;
  }
</style>
