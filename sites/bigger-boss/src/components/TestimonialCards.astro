---
// Testimonial Cards Component - Bigger Boss Homepage
// Design: Frosted glass cards on navy gradient background
// Metaphor: Trust signals with metric emphasis (data-focused proof)

interface Testimonial {
  quote: string;
  name: string;
  role: string;
  location: string;
  metrics?: string; // Optional metrics to highlight
}

interface Props {
  title: string;
  testimonials: Testimonial[];
  metricsShowcase?: {
    projects: string;
    compliance: string;
    qualityScore: string;
    delivery: string;
  };
}

const { title, testimonials, metricsShowcase } = Astro.props;
---

<section class="relative py-section-y-lg bg-gradient-navy text-white overflow-hidden">
  <div class="max-w-section mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-h2 font-bold text-white">{title}</h2>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid md:grid-cols-2 gap-8 mb-16">
      {testimonials.map((testimonial) => (
        <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-card p-component-lg hover:bg-white/15 transition-all duration-300">
          <!-- Quote -->
          <blockquote class="text-body-lg text-white/90 mb-6 italic leading-relaxed">
            "{testimonial.quote}"
          </blockquote>

          <!-- Metrics (if provided) -->
          {testimonial.metrics && (
            <div class="mb-6 pb-6 border-b border-white/20">
              <p class="text-body text-orange-light font-semibold">{testimonial.metrics}</p>
            </div>
          )}

          <!-- Attribution -->
          <div class="flex items-start gap-4">
            <!-- Avatar Placeholder -->
            <div class="flex-shrink-0 w-12 h-12 bg-orange-muted/20 rounded-full flex items-center justify-center">
              <span class="text-orange-muted font-bold text-xl">
                {testimonial.name.charAt(0)}
              </span>
            </div>

            <!-- Name & Role -->
            <div>
              <div class="text-body font-bold text-white">{testimonial.name}</div>
              <div class="text-body-sm text-white/80">{testimonial.role}</div>
              <div class="text-body-sm text-white/60">{testimonial.location}</div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Metrics Showcase (if provided) -->
    {metricsShowcase && (
      <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-container p-component-lg">
        <div class="grid md:grid-cols-4 gap-8 text-center">
          <!-- Projects -->
          <div>
            <div class="text-metric-card text-orange-muted mb-2">{metricsShowcase.projects}</div>
            <div class="text-body-sm text-white/80 uppercase tracking-wide font-semibold">Projects Delivered</div>
          </div>

          <!-- Compliance -->
          <div>
            <div class="text-metric-card text-green-success mb-2">{metricsShowcase.compliance}</div>
            <div class="text-body-sm text-white/80 uppercase tracking-wide font-semibold">Compliance Record</div>
          </div>

          <!-- Quality Score -->
          <div>
            <div class="text-metric-card text-orange-muted mb-2">{metricsShowcase.qualityScore}</div>
            <div class="text-body-sm text-white/80 uppercase tracking-wide font-semibold">Average Quality Score</div>
          </div>

          <!-- Delivery -->
          <div>
            <div class="text-metric-card text-orange-muted mb-2">{metricsShowcase.delivery}</div>
            <div class="text-body-sm text-white/80 uppercase tracking-wide font-semibold">Average Delivery</div>
          </div>
        </div>
      </div>
    )}
  </div>
</section>
