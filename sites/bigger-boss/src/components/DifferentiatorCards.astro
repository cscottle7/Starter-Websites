---
// Differentiator Cards Component - Bigger Boss Homepage
// Design: 4-column grid with intentional asymmetry
// Anti-AI Constraint: Alternating icon positions (left, center, right, left)

interface Differentiator {
  icon: string;
  title: string;
  shortDescription: string;
  longDescription: string;
  ctaText: string;
  ctaLink: string;
  iconPosition?: 'left' | 'center' | 'right';
}

interface Props {
  title: string;
  differentiators: Differentiator[];
}

const { title, differentiators } = Astro.props;

// Icon SVGs mapping
const icons = {
  clock: `<svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" /></svg>`,
  shield: `<svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>`,
  award: `<svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" /></svg>`,
  chart: `<svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20"><path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z" /></svg>`,
};
---

<section class="py-section-y-lg bg-bg-secondary">
  <div class="max-w-section mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-h2 font-bold text-text-primary">{title}</h2>
    </div>

    <!-- 4-Column Grid (Anti-AI: Intentional asymmetry in icon positions) -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {differentiators.map((diff, index) => {
        // Anti-AI Constraint: Icon positions cycle (left, center, right, left)
        const iconPositions = ['left', 'center', 'right', 'left'];
        const iconPosition = diff.iconPosition || iconPositions[index % 4];

        return (
          <div class="bg-white border border-border rounded-card p-component-lg shadow-card hover:-translate-y-2 hover:shadow-hover transition-all duration-300">
            <!-- Icon (left-justified) -->
            <div class="mb-6 flex justify-start">
              <div class="text-orange-muted">
                <Fragment set:html={icons[diff.icon]} />
              </div>
            </div>

            <!-- Title -->
            <h3 class="text-h4 font-bold text-text-primary mb-4">{diff.title}</h3>

            <!-- Short Description -->
            <p class="text-body text-text-secondary mb-6">{diff.shortDescription}</p>

            <!-- CTA Link -->
            <a
              href={diff.ctaLink}
              class="inline-flex items-center text-blue-vibrant text-body font-semibold hover:underline transition-all duration-150"
            >
              {diff.ctaText} â†’
            </a>
          </div>
        );
      })}
    </div>
  </div>
</section>
