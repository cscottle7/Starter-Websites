---
// Final CTA Component - Bigger Boss Homepage
// Design: Orange background with inverted contrast (full engine heat)
// Layout: Centered with primary CTA (navy button) and secondary CTA (download link)

interface Props {
  headline: string;
  subheadline: string;
  primaryCTA: string;
  primaryCTALink: string;
  secondaryCTA?: string;
  secondaryCTALink?: string;
  trustSignals: string[];
}

const {
  headline,
  subheadline,
  primaryCTA,
  primaryCTALink,
  secondaryCTA,
  secondaryCTALink,
  trustSignals,
} = Astro.props;
---

<section class="relative py-section-y-lg bg-orange-muted text-white overflow-hidden">
  <!-- Background Pattern (optional subtle texture) -->
  <div class="absolute inset-0 opacity-5">
    <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="grid" width="32" height="32" patternUnits="userSpaceOnUse">
          <path d="M 32 0 L 0 0 0 32" fill="none" stroke="white" stroke-width="1"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#grid)" />
    </svg>
  </div>

  <div class="relative max-w-content mx-auto px-6 text-center">
    <!-- Headline -->
    <h2 class="text-h2 font-bold text-white mb-4">{headline}</h2>

    <!-- Subheadline -->
    <p class="text-body-lg text-white/90 mb-8">{subheadline}</p>

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
      <!-- Primary CTA (Navy on Orange - inverted contrast) -->
      <a
        href={primaryCTALink}
        class="inline-flex items-center justify-center bg-navy-dark text-white text-btn-primary font-bold px-12 py-5 rounded-btn hover:bg-navy-light hover:-translate-y-1 hover:shadow-xl transition-all duration-200 focus:ring-2 focus:ring-navy-dark focus:ring-offset-2 focus:ring-offset-orange-muted"
      >
        {primaryCTA}
      </a>

      <!-- Secondary CTA (if provided) -->
      {secondaryCTA && secondaryCTALink && (
        <a
          href={secondaryCTALink}
          class="inline-flex items-center justify-center border-2 border-white/30 text-white text-btn-secondary font-semibold px-8 py-4 rounded-btn hover:border-white/60 hover:bg-white/10 transition-all duration-200 focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-orange-muted"
        >
          {secondaryCTA} â†’
        </a>
      )}
    </div>

    <!-- Trust Signals -->
    <div class="flex flex-wrap justify-center gap-x-8 gap-y-3 text-body-sm text-white/90">
      {trustSignals.map((signal) => (
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span>{signal}</span>
        </div>
      ))}
    </div>
  </div>
</section>
