---
// Audience Cards Component - Bigger Boss Homepage
// Design: 4 audience segments with industry-specific CTAs
// Layout: 2x2 grid on desktop, stacked on mobile

interface AudienceSegment {
  emoji: string;
  title: string;
  description: string;
  ctaText: string;
  ctaLink: string;
}

interface Props {
  title: string;
  subtitle: string;
  segments: AudienceSegment[];
}

const { title, subtitle, segments } = Astro.props;
---

<section class="py-section-y bg-bg-primary">
  <div class="max-w-section mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-h2 font-bold text-text-primary mb-4">{title}</h2>
      <p class="text-body-lg text-text-secondary max-w-content mx-auto">{subtitle}</p>
    </div>

    <!-- 2x2 Grid -->
    <div class="grid md:grid-cols-2 gap-8">
      {segments.map((segment) => (
        <div class="bg-white border-2 border-border rounded-card p-component-lg hover:border-orange-muted/40 hover:shadow-hover transition-all duration-300">
          <!-- Emoji Icon -->
          <div class="text-5xl mb-6">{segment.emoji}</div>

          <!-- Title -->
          <h3 class="text-h4 font-bold text-text-primary mb-4">{segment.title}</h3>

          <!-- Description -->
          <p class="text-body text-text-secondary mb-6">{segment.description}</p>

          <!-- CTA Link -->
          <a
            href={segment.ctaLink}
            class="inline-flex items-center text-blue-vibrant text-body font-semibold hover:underline transition-all duration-150"
          >
            {segment.ctaText} â†’
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
