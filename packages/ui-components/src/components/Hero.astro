---
/**
 * Hero - DaisyUI hero with archetype variants
 *
 * @example
 * ```astro
 * <Hero
 *   archetype="bold"
 *   headline="Transform Your Business"
 *   subheadline="AI-powered solutions for modern agencies"
 *   ctaText="Get Started"
 *   ctaUrl="/contact"
 * />
 * ```
 */

interface Props {
  archetype?: 'bold' | 'elegant' | 'approachable';
  headline: string;
  subheadline?: string;
  ctaText?: string;
  ctaUrl?: string;
  secondaryCtaText?: string;
  secondaryCtaUrl?: string;
  class?: string;
}

const {
  archetype = 'bold',
  headline,
  subheadline,
  ctaText,
  ctaUrl,
  secondaryCtaText,
  secondaryCtaUrl,
  class: className = '',
} = Astro.props;

const archetypeClasses = {
  bold: 'hero min-h-screen bg-gradient-to-br from-secondary via-accent to-primary',
  elegant: 'hero min-h-[70vh] bg-base-200',
  approachable: 'hero min-h-[80vh] bg-base-100',
};

const contentClasses = {
  bold: 'hero-content text-center',
  elegant: 'hero-content text-center',
  approachable: 'hero-content flex-col lg:flex-row',
};

const headingClasses = {
  bold: 'text-6xl md:text-7xl lg:text-8xl font-black mb-6 text-base-100 leading-tight',
  elegant: 'text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-primary mb-6',
  approachable: 'text-4xl md:text-5xl font-bold text-primary mb-4',
};

const subheadingClasses = {
  bold: 'text-xl md:text-2xl lg:text-3xl font-extrabold mb-10 text-base-100/95 max-w-4xl mx-auto',
  elegant: 'text-lg md:text-xl text-gray-600 mb-8 max-w-2xl mx-auto',
  approachable: 'text-lg md:text-xl text-gray-700 mb-6',
};
---

<div class:list={[archetypeClasses[archetype], className]}>
  <div class={contentClasses[archetype]}>
    <div class="max-w-5xl">
      <h1 class={headingClasses[archetype]}>{headline}</h1>
      {subheadline && (
        <p class={subheadingClasses[archetype]}>{subheadline}</p>
      )}
      {(ctaText || secondaryCtaText) && (
        <div class="flex flex-wrap gap-4 justify-center">
          {ctaText && ctaUrl && (
            <a href={ctaUrl} class="btn btn-accent btn-lg font-black text-lg px-10">
              {ctaText}
            </a>
          )}
          {secondaryCtaText && secondaryCtaUrl && (
            <a href={secondaryCtaUrl} class="btn btn-ghost btn-lg font-bold text-base-100 border-2 border-base-100/30 hover:border-base-100 hover:bg-base-100/10">
              {secondaryCtaText}
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</div>
