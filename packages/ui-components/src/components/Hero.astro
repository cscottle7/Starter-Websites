---
/**
 * Hero - Hero section with headline, subheadline, and CTA
 *
 * @example
 * ```astro
 * <Hero
 *   headline="Welcome to Our Site"
 *   subheadline="We build amazing things"
 *   ctaText="Get Started"
 *   ctaUrl="/contact"
 * />
 * ```
 */

interface Props {
  headline: string;
  subheadline?: string;
  ctaText?: string;
  ctaUrl?: string;
  backgroundImage?: string;
}

const { headline, subheadline, ctaText, ctaUrl, backgroundImage } = Astro.props;
---

<section class="hero" style={backgroundImage ? `background-image: url(${backgroundImage})` : ''}>
  <div class="container">
    <div class="content">
      <h1 class="headline">{headline}</h1>
      {subheadline && <p class="subheadline">{subheadline}</p>}
      {ctaText && ctaUrl && (
        <a href={ctaUrl} class="cta-button">
          {ctaText}
        </a>
      )}
    </div>
  </div>
</section>

<style>
  .hero {
    width: 100%;
    padding: 4rem 0;
    background-color: #f9fafb;
    background-size: cover;
    background-position: center;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .content {
    max-width: 48rem;
    margin: 0 auto;
    text-align: center;
  }

  .headline {
    font-size: 3rem;
    font-weight: 800;
    color: #111827;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .subheadline {
    font-size: 1.25rem;
    color: #6b7280;
    margin-bottom: 2rem;
  }

  .cta-button {
    display: inline-block;
    padding: 0.75rem 2rem;
    font-size: 1.125rem;
    font-weight: 600;
    text-decoration: none;
    color: #fff;
    background-color: #3b82f6;
    border-radius: 0.5rem;
    transition: background-color 0.2s;
  }

  .cta-button:hover {
    background-color: #2563eb;
  }

  @media (max-width: 768px) {
    .headline {
      font-size: 2rem;
    }

    .subheadline {
      font-size: 1rem;
    }
  }
</style>
