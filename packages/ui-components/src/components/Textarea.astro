---
/**
 * Textarea - Multi-line text input with label and validation
 *
 * @example
 * ```astro
 * <Textarea
 *   label="Message"
 *   name="message"
 *   placeholder="Tell us about your project..."
 *   rows={5}
 *   required
 * />
 * ```
 */

interface Props {
  label: string;
  name: string;
  id?: string;
  placeholder?: string;
  required?: boolean;
  disabled?: boolean;
  value?: string;
  rows?: number;
  cols?: number;
  minlength?: number;
  maxlength?: number;
  class?: string;
  error?: string;
}

const {
  label,
  name,
  id = name,
  placeholder,
  required = false,
  disabled = false,
  value,
  rows = 4,
  cols,
  minlength,
  maxlength,
  class: className = '',
  error,
} = Astro.props;
---

<div class:list={['textarea-wrapper', className]}>
  <label for={id} class="textarea-label">
    {label}
    {required && <span class="required-indicator" aria-label="required">*</span>}
  </label>
  <textarea
    name={name}
    id={id}
    placeholder={placeholder}
    required={required}
    disabled={disabled}
    rows={rows}
    cols={cols}
    minlength={minlength}
    maxlength={maxlength}
    class:list={['textarea-field', { 'textarea-error': error }]}
    aria-invalid={error ? 'true' : undefined}
    aria-describedby={error ? `${id}-error` : undefined}
  >{value}</textarea>
  {error && (
    <div id={`${id}-error`} class="error-message" role="alert">
      {error}
    </div>
  )}
</div>

<style>
  .textarea-wrapper {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    width: 100%;
  }

  .textarea-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: #374151;
    display: block;
  }

  .required-indicator {
    color: #ef4444;
    margin-left: 0.25rem;
  }

  .textarea-field {
    width: 100%;
    padding: 0.625rem 0.875rem;
    font-size: 1rem;
    font-family: inherit;
    line-height: 1.5;
    color: #1f2937;
    background-color: #fff;
    border: 1px solid #d1d5db;
    border-radius: 0.375rem;
    transition: all 0.15s;
    resize: vertical;
  }

  .textarea-field:focus {
    outline: none;
    border-color: #3b82f6;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  .textarea-field:disabled {
    background-color: #f3f4f6;
    color: #9ca3af;
    cursor: not-allowed;
    resize: none;
  }

  .textarea-field.textarea-error {
    border-color: #ef4444;
  }

  .textarea-field.textarea-error:focus {
    border-color: #ef4444;
    box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
  }

  .error-message {
    font-size: 0.875rem;
    color: #ef4444;
    margin-top: 0.25rem;
  }
</style>
